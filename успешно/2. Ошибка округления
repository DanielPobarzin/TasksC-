using System;

class Program
{
    static void Main(string[] args)
    {
        int t = int.Parse(Console.ReadLine()); // количество наборов входных данных

        for (int i = 0; i < t; i++)
        {
            string[] input = Console.ReadLine().Split();
            int n = int.Parse(input[0]); // количество проданных товаров
            int p = int.Parse(input[1]); // процент комиссии

            decimal lostCents = 0; // сумма упущенных копеек

            for (int j = 0; j < n; j++)
            {
                decimal price = decimal.Parse(Console.ReadLine()); // стоимость проданного товара
                decimal commission = price * p / 100; // комиссия в рублях
                decimal cents = Math.Floor(commission * 100) % 100; // копейки

                lostCents += cents;
            }

            string result = string.Format("{0:0.00}", lostCents / 100).Replace(',', '.'); // вывод суммы упущенных рублей (копейки делятся на 100)
            Console.WriteLine(result);
        }
    }
}